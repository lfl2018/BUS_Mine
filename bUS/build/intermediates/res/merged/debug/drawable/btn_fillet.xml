<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >  
        <shape>  
            <gradient  
                android:startColor="@color/backblue"  
                android:endColor="#FFFFFF"  
                android:angle="270" />  
            <stroke  
                android:width="0.3dp"  
                android:color="@color/gray_bfbfbf" />  
            <corners  
                android:radius="10dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item>  
  
    <item android:state_focused="true" >  
        <shape>  
            <gradient  
                android:startColor="@color/gray_bfbfbf"  
                android:endColor="@color/backblue"  
                android:angle="270" />  
            <stroke  
                android:width="0.3dp"  
                android:color="@color/gray_bfbfbf" />  
            <corners  
                android:radius="10dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item>  
  
    <item>          
        <shape>  
            <gradient  
                android:startColor="@color/backblue"
                android:endColor="@color/gray_bfbfbf"  
                android:angle="270" />  
            <stroke  
                android:width="0.3dp"  
                android:color="@color/gray_bfbfbf" />  
            <corners  
                android:radius="10dp" />  
            <padding  
                android:left="10dp"  
                android:top="10dp"  
                android:right="10dp"  
                android:bottom="10dp" />  
        </shape>  
    </item> 

</selector>
