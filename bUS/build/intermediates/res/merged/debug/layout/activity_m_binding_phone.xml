<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/top_bar"
        layout="@layout/top_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/et_user_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/shape_login"
                android:drawableLeft="@drawable/icon_number"
                android:drawablePadding="15dp"
                android:hint="请输入11位手机号"
                android:inputType="phone"
                android:textColor="@color/gray_base_deep"
                android:textColorHint="@color/gray_base"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/yan_zheng_ma"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_login"
                    android:drawableLeft="@drawable/icon_password"
                    android:drawablePadding="15dp"
                    android:hint="请输入验证码"
                    android:textColor="@color/gray_base_deep"
                    android:textColorHint="@color/gray_base"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_send_ramdon"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="35dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_selector"
                    android:text="获取验证码"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/et_pass_word"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_login"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="15dp"
                android:hint="请输入6-15位的密码"
                android:inputType="textPassword"
                android:maxLength="15"
                android:textColor="@color/gray_base_deep"
                android:textColorHint="@color/gray_base"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_binding"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/btn_selector"
                android:text="绑定"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>