<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/topbar"
        layout="@layout/top_bar" />

    <EditText
        android:id="@+id/e_pass"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/shape_login"
        android:drawableLeft="@drawable/icon_password"
        android:drawablePadding="15dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textColor="@color/gray_base_deep"
        android:textColorHint="@color/gray_base"
        android:textSize="16sp" />



    <EditText
        android:id="@+id/e_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_login"
        android:drawableLeft="@drawable/icon_wifi_label_name"
        android:drawablePadding="15dp"
        android:hint="给您的据点命名，可不填"
        android:textColor="@color/gray_base_deep"
        android:textColorHint="@color/gray_base"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/t_mistake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="3dp"
        android:text="" />
    
    <Button
		android:textSize="18sp"
		android:textColor="#fff"
        android:background="@drawable/btn_selector"
        android:id="@+id/b_conect"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="60dp"
        android:text="立即连接" />
    <CheckBox
        android:id="@+id/c_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:checked="true"
        android:text="同时分享此wifi，非主人勿选"
        android:textSize="13sp" />

</LinearLayout>