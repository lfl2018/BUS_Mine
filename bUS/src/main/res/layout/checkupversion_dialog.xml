<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_update_bg" >

    <TextView
        android:id="@+id/download_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="有版本更新"
        android:textColor="#3399ff"
        android:textSize="20sp"
        android:visibility="visible" />

    <View
        android:id="@+id/download_line_top"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/download_title"
        android:background="#4c4c4c"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="290dip"
        android:layout_height="169.6dip"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/download_line_top"
        android:layout_centerHorizontal="true"
        android:layout_margin="22dp"
        android:lineSpacingExtra="5dp"
        android:maxLines="7"
        android:text="新版本功能："
        android:textColor="#333333"
        android:textSize="16sp" />

    <View
        android:id="@+id/exit_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/tv_description"
        android:background="#4c4c4c" />

    <LinearLayout
        android:id="@+id/time_select_RL1"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_below="@id/exit_line"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_update_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="马上下载"
            android:textColor="#333333"
            android:textSize="16sp" />

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="#4c4c4c" />

        <TextView
            android:id="@+id/tv_update_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下次再说"
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>